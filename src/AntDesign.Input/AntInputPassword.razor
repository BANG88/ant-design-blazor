@namespace AntDesign
@inherits AntInputPasswordComponent

<AntInput type="@(visible ? "text" : "password")" size="@size" Class="@Class">
    <Suffix>
        @if (visibilityToggle)
        {
            <AntIcon Type="@(visible? "eye": "eye-invisible")" Class="@($"{prefixCls}-icon")" OnClick="@(()=> { visible = !visible;this.StateHasChanged(); })"></AntIcon>
        }
    </Suffix>
</AntInput>