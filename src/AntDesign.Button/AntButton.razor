@namespace AntDesign
@inherits AntButtonComponent

@if (string.IsNullOrEmpty(href))
{
    <button @attributes="Attributes" type="@htmlType" class="@Class" style="@style" @onclick="@OnClickHandler" disabled=@(disabled)>
        @{
            if (!string.IsNullOrEmpty(icon))
            {
                <AntIcon Type="@icon"></AntIcon>
            }
        }
        @if (ChildContent != null)
        {
            <span>@ChildContent</span>
        }
    </button>

}
else
{

    <a @attributes="Attributes" class="@Class" href="@href" style="@style" @onclick="@OnClickHandler" disabled=@disabled>
        @{
            if (!string.IsNullOrEmpty(icon))
            {
                <AntIcon Type="@icon"></AntIcon>
            }
        }
        @if (ChildContent != null)
        {
            <span>@ChildContent</span>
        }
    </a>

}
